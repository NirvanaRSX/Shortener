{% block stylesheets %}
    {% stylesheets '@AppBundle/Resources/public/styles/style.css' %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Welcome to shortener</h1>
    </div>
    <div class="container">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="submit">
        {{ form_end(form) }}
    </div>
    {% if newUrl is defined %}
        <div class="container">
            <a href="{{ path('show',{shortUrl: newUrl.shortUrl}) }}">{{ newUrl.shortUrl }}</a>
        </div>
    {% endif %}
{% endblock %}
